{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "jest",
    "prettier",
    "no-only-tests"
  ],
  "env": {
    "es6": true,
    "jest/globals": true
  },
  "rules": {
    "max-nested-callbacks": [
      "error",
      2
    ],
    "complexity": [
      "error",
      2
    ],
    "max-lines": [
      "error",
      700
    ],
    "max-lines-per-function": [
    "error",
    100
    ],
    "max-statements": [
      "error",
      50
    ],
    "max-depth": [
      "error",
      4
    ],
    "prettier/prettier": "error",
    "global-require": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "import/no-dynamic-require": 0,
    "no-loop-func": 0,
    "new-cap": 0,
    "no-restricted-syntax": 0,
    "guard-for-in": 0,
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "no-only-tests/no-only-tests": 2
  }
}